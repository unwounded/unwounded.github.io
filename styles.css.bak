body {
    background-color: #000;
    color: #00ff00;
    font-family: 'Courier New', Courier, monospace;
    margin: 0;
    padding: 0;
}

header {
    text-align: center;
    padding: 20px;
    background-color: #000;
    border-bottom: 2px solid #00ff00;
}

main {
    padding: 20px;
}

.semester {
    margin-bottom: 40px;
}

.semester h2 {
    border-bottom: 2px solid #00ff00;
    padding-bottom: 10px;
    margin-bottom: 20px;
}

.semester ul {
    list-style-type: none;
    padding: 0;
}

.semester li {
    margin-bottom: 20px;
}

.semester li h3 {
    margin: 0 0 10px 0;
}

.semester li p {
    margin: 0;
}

footer {
    text-align: center;
    padding: 10px;
    background-color: #000;
    border-top: 2px solid #00ff00;
    position: fixed;
    width: 100%;
    bottom: 0;
}

@keyframes falling {
    0% { transform: translateY(0); opacity: 1; }
    100% { transform: translateY(100vh); opacity: 0; }
}

body::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

body::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, rgba(0, 255, 0, 0.1), rgba(0, 255, 0, 0.1));
    z-index: -1;
}

body::before, body::after {
    animation: falling 10s linear infinite;
}

/* Container for the content */
.content {
    width: 80%;
    margin: 50px auto;
    overflow-y: auto;
    height: 80vh;
    padding: 20px;
    border: 1px solid green;
    background-color: rgba(0, 0, 0, 0.5);
}

.content::-webkit-scrollbar {
    width: 12px;
}

.content::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.5);
}

.content::-webkit-scrollbar-thumb {
    background: green;
    border-radius: 10px;
}

.content::-webkit-scrollbar-thumb:hover {
    background: #00ff00;
}

.content::-webkit-scrollbar-corner {
    background: rgba(0, 0, 0, 0.5);
}

/* Fallback for non-webkit browsers */
.content {
    scrollbar-width: thin;
    scrollbar-color: green rgba(0, 0, 0, 0.5);
}